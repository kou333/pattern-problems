       1
       0 1
       1 0 1
       0 1 0 1
       1 0 1 0 1

       public class BinaryPattern {
    public static void main(String[] args) {
        for (int i = 1; i <= 5; i++) {
            for (int j = 1; j <= i; j++) {
                // The value is determined by the parity (odd/even) of the position.
                System.out.print((i + j) % 2 + " ");
            }
            System.out.println();
        }
    }
}
